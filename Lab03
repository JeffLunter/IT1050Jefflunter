using System;

namespace Lab03_2
{
    class Program
    {
        static void Main(string[] args)
        {//5.
            int counter = 1;
            while (counter <= 10)
            {
                Console.WriteLine(counter);
                counter = counter + 1;
            }

            { //6.
                int counter2 = 60;
                while (counter2 >= 20)
                {
                    Console.WriteLine(counter2);
                    counter2 = counter2 - 1;
                }
            }
            { //7.
                int counter3 = 10;

                while (counter3 <= 20)
                {
                    Console.WriteLine(counter3);
                    counter3 = counter3 + 1;
                }
            }
        }
    }
}
